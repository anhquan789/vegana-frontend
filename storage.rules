rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile pictures
    match /users/{userId}/avatar.{extension} {
      allow read: if true; // Anyone can read avatars
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        extension.matches('(jpg|jpeg|png|webp)') &&
        request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    // Course thumbnails and materials
    match /courses/{courseId}/{allPaths=**} {
      allow read: if true; // Anyone can read course materials
      allow write: if request.auth != null &&
        (get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'instructor']);
    }
    
    // User uploads (assignments, etc.)
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
