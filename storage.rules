rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile pictures
    match /users/{userId}/avatar/{allPaths=**} {
      allow read: if true; // Anyone can read avatars
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    // Course thumbnails and materials
    match /courses/{courseId}/{allPaths=**} {
      allow read: if true; // Anyone can read course materials
      allow write: if request.auth != null;
    }
    
    // Video uploads for courses (separate rule for larger files)
    match /videos/{courseId}/{allPaths=**} {
      allow read: if true; // Anyone can read videos
      allow write: if request.auth != null &&
        request.resource.size < 500 * 1024 * 1024; // 500MB limit for videos
    }
    
    // User uploads (assignments, etc.)
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    // Default allow for development (emulator only)
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
